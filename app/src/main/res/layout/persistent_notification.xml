<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/layoutContacto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contactImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/contact_icon" />

        <TextView
            android:id="@+id/contactAlias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Alias" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutEditar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_icon" />

            <TextView
                android:id="@+id/editTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSuceso"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sucesoImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/suceso_icon" />

            <TextView
                android:id="@+id/sucesoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCuenta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cuentaImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/account_icon" />

            <TextView
                android:id="@+id/cuentaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuevo" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>