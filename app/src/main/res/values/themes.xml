<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Tema.Arcoiris" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="android:colorAccent">#000000</item>
        <item name="android:buttonStyle">@style/RainbowBorderButton</item>
        <item name="android:editTextStyle">@style/RainbowBorderEditText</item>
    </style>

    <style name="RainbowBorderButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rainbow_border</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RainbowBorderEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rainbow_border</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>